#!/bin/bash

set -euo pipefail

mkdir -p /tmp/charts

printf "Validating incubator charts ... \n\n"

for chart in incubator/*; do

  if [ "$chart" == 'incubator/README.md' ]; then continue ; fi

  printf "\nChecking %s\n" "${chart#*/}"

  helm template "${chart}"  > /tmp/"${chart#*/}".yaml

  conftest test -p /policies /tmp/"${chart#*/}".yaml

done

printf "Validating stable charts ... \n\n"

